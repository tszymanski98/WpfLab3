<Window x:Class="WpfLab3.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfLab3"
        mc:Ignorable="d"
        Title="Window1" Height="450" Width="800">
    <Grid>
        <Button Click="dodaj_but"  FontWeight="UltraBlack"  FontSize="30" Content="DODAJ" HorizontalAlignment="Left" Margin="550,250,0,0" VerticalAlignment="Top" Height="80" Width="150"/>
        <TextBox TextChanged="Art_TextChanged" x:Name="art_tb" HorizontalAlignment="Left" Margin="150,290,0,0" Text="nazwa_art" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBox TextChanged="Ilo_TextChanged" x:Name="ilo_tb" HorizontalAlignment="Left" Margin="300,290,0,0" Text="ilość" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Label FontWeight="Medium" FontSize="15" Content="Nazwa artykułu" HorizontalAlignment="Left" Height="30" Margin="150,250,0,0" VerticalAlignment="Top" Width="120"/>
        <Label FontWeight="Medium" FontSize="15" Content="Ilość" HorizontalAlignment="Left" Height="30" Margin="300,250,0,0" VerticalAlignment="Top" Width="120"/>

    </Grid>
</Window>
